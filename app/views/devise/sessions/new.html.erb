<div class="contents"">
  <%= image_tag '/top-image_medium.jpg', class: 'img-fluid' %>

  <div class="login_form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <div class="login_form__input">
        <p>
          <i class="fas fa-envelope"></i> E-Mail
        </p>
        <%= form.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
        <small class="form-text text-muted">登録したメールアドレスを入力して下さい。</small>
      </div>
      <div class="login_form__input">
        <p>
          <i class="fas fa-key"></i> パスワード
        </p>
        <%= form.password_field :password, class: "form-control", placeholder: "パスワード" %>
        <div class="login_form__input__password">
          <small class="form-text text-muted">パスワードを入力して下さい。</small>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: 'login_form__input__password--forgot' %>
          <% end %>
        </div>
      </div>
      <p class="remember">
        <%= form.check_box :remember_me %> ログインを記録する
      </p>
      <%= form.submit "ログイン", class: "btn btn-outline-primary btn-block login_form__btn" %>
    <% end %>
  </div>
</div>

