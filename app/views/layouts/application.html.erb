<!DOCTYPE html>
<html>
  <head>
    <title>Any Coordinator</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Sawarabi+Gothic" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/bf6ee95d94.js" crossorigin="anonymous"></script>
  </head>

  <body class="container-xl">
    <header>
      <%= image_tag '/Any_Coodinator_logo.png' %>

      <div class="user_btn">
        <% if user_signed_in? %>
          <%= link_to edit_user_registration_path do %>
            <button type="button" class="btn btn-outline-dark">マイページ</button>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <button type="button" class="btn btn-outline-dark"><i class="fas fa-sign-out-alt"></i>ログアウト</button>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do %>
            <button type="button" class="btn btn-outline-dark"><i class="fas fa-user-plus"></i>ログイン</button>
          <% end %>
          <%= link_to new_user_registration_path do %>
            <button type="button" class="btn btn-outline-dark"><i class="fas fa-sign-in-alt"></i>新規登録</button>
          <% end %>
        <% end %>
      </div>

      <div class="Navigation_Menu">
        <nav class="navbar navbar-expand-md navbar-light" style="background-color: #ccffcc;">
          <%= link_to "Any Coodinator", root_path , class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/">ホーム<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="/" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  コーディネート
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <%= link_to "Women", root_path , class: "dropdown-item" %>
                  <%= link_to "Men", root_path , class: "dropdown-item" %>
                  <%= link_to "Kids", root_path , class: "dropdown-item" %>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to "よくある質問（FAQ）", root_path , class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "お問い合わせ", root_path , class: "nav-link" %>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </header>

    <%= yield %>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>